<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.murugan.surya.wetu.MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:weightSum="1">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainback"
            android:fontFamily="sans-serif-smallcaps"
            android:text="SUBJECTS FOR ECE 7TH SEM"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="27sp"
            android:textStyle="bold" />




</LinearLayout>

        <Button
            android:id="@+id/computercommunicationnetworksbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Computer Communication Networks"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/opticalfibercommunicationbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Optical Fiber Communication"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/powerelectronicsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Power Electronics"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/embeddedsystemdesignbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Embedded System Design"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/dspalgorithmsandarchitecturebutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="DSP Algorithms and Architecture"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/microandsmartsystemstechnologybutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Micro and Smart Systems Technology"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/artificialneuralnetworkbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Artificial Neural Network"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/cadforvlsibutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="CAD for VLSI"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/appliedembeddedsystemdesignbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Applied Embedded System Design"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/speechprocessingbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Speech Processing"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/datastructureusingcplusbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Data Structure Using C++"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/realtimesystemsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Real Time Systems"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/imageprocessingbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Image Processing"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/radiofrequencyintegratedcircuitsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Radio Frequency Integrated Circuits"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/wavelettransformsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Wavelet Transforms"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/modelingandsimulationofdatanetworksbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Modeling and Simulation of Data Networks"
            android:textAlignment="center"
            android:textSize="22sp"/>



    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
