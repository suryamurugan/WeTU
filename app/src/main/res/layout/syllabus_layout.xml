<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.murugan.surya.wetu.MainActivity">

        <LinearLayout
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <LinearLayout
            android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:padding="5dp"
                android:orientation="vertical">



                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="5dp"
                    android:elevation="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="1ST YEAR"
                            android:textAlignment="center"
                            android:textSize="10sp" />
                        <android.support.v7.widget.CardView
                            android:elevation="5dp"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            card_view:cardCornerRadius="5dp"
                            android:id="@+id/pcyclebutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="85sp">

                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_gravity="center"
                                    android:fadingEdge="horizontal|vertical"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/pyformula" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="85sp"
                                    android:gravity="center"
                                    android:text="Physics Cycle"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />



                            </LinearLayout>

                            </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            card_view:cardCornerRadius="5dp"
                            android:id="@+id/chemcyclebutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="85dp">
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_gravity="center"
                                    android:fadingEdge="horizontal|vertical"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/chemistry"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="85sp"
                                    android:gravity="center"
                                    android:text="Chemistry Cycle"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>




        </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="5dp"

                android:id="@+id/csebutton"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:fadingEdge="horizontal|vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/csicon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:gravity="center"
                        android:text="Computer Science &amp; Engineering"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>
                </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                android:id="@+id/isbutton"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:fadingEdge="horizontal|vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/isicon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:gravity="center"
                        android:text="Information Science &amp; Engineering"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>


                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                android:id="@+id/ecebutton"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:fadingEdge="horizontal|vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/ecicon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="Electronics &amp; communication engineering"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>




                </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                android:id="@+id/mebutton"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:fadingEdge="horizontal|vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/mechicon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:gravity="center"
                        android:text="Mechanical engineering"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>




                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                android:id="@+id/cvbutton"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:fadingEdge="horizontal|vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/civilicon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:gravity="center"
                        android:text="Civil Engineering"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>


                </LinearLayout>



                </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cd"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="100dp" />


                <Button
                    android:id="@+id/EMPTYbutton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="85sp"
                    android:textSize="22sp"/>









        </LinearLayout>

</android.support.v4.widget.NestedScrollView>

