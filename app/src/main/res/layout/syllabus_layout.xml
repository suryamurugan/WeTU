<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.murugan.surya.wetu.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mainback" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainback"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Syllabus Info"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="32sp"
            android:textStyle="bold" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/pcyclebutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Physics cycle"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />

            <Button
                android:id="@+id/chemcyclebutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Chemistry cycle"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />

            <Button
                android:id="@+id/csebutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Computer Science &amp; Engineering"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />

            <Button
                android:id="@+id/isbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Information Science &amp; Engineering"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />
            <Button
                android:id="@+id/ecebutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Electronics &amp; communication engineering"
                android:textSize="22sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />
            <Button
                android:id="@+id/mebutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Mechanical engineering"
                android:textSize="22sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />
            <Button
                android:id="@+id/cvbutton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Civil Engineering"
                android:textSize="22sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainback" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="85sp"
                android:gravity="center"

                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="85sp"
                android:gravity="center"

                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

