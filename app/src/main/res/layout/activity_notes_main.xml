<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.murugan.surya.wetu.notes_main">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="162dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1st year"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:textAlignment="center"/>


        </LinearLayout>


        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="133dp"
                        android:layout_height="130dp"/>



                    <Button
                        android:layout_width="133dp"
                        android:layout_height="130dp"
                        android:text="Engineering\nMathematics"/>
                    <Button
                        android:layout_width="133dp"
                        android:layout_height="130dp"
                        android:text="Ele of civil Engineering"/>
                    <Button
                        android:layout_width="133dp"
                        android:layout_height="130dp"
                        android:text="Elements of Mechnaical engineering"/>
                    <Button
                        android:layout_width="133dp"
                        android:layout_height="130dp"
                        android:text="Basic Electrical Engineering"/>
                    <Button
                        android:layout_width="133dp"
                        android:layout_height="130dp"
                        android:text=""/>
                    <Button
                        android:layout_width="133dp"
                        android:layout_height="130dp" />
                    <Button
                        android:layout_width="133dp"
                        android:layout_height="130dp" />



            </LinearLayout>




            </LinearLayout>
        </HorizontalScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
