<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.murugan.surya.wetu.MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:weightSum="1">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainback"
            android:fontFamily="sans-serif-smallcaps"
            android:text="SUBJECTS FOR ECE 6TH SEM"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="27sp"
            android:textStyle="bold" />




</LinearLayout>

        <Button
            android:id="@+id/digitalcommunictaionbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Digital Communication"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/microprocessorsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Microprocessors"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/microelectronicscircuitsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Microelectronics Circuits"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/antennasandpropagationbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Antennas and Propagation"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/operatingsystemsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Operating Systems"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/analogandmixedmodevlsidesignbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Analog and Mixed Mode VLSI Design"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/satellitecommunicationsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Satellite Communications"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/randomprocessesbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Random Processes"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/lowpowervlsidesignbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Low Power VLSI Design"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/programmingincplusbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Programing in C++"
            android:textAlignment="center"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/digitalsystemdesignusingverilogbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Digital System Design Using Verilog"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/virtualinstrumentationbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Virtual Instrumentation"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/advancedcommunicationlabbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="ADVANCED COMMUNICATION LAB"
            android:textAlignment="center"
            android:textSize="22sp"/>
    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
