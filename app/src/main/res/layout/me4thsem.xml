<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.murugan.surya.wetu.MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:weightSum="1">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainback"
        android:fontFamily="sans-serif-smallcaps"
        android:text="SUBJECTS FOR MECH 4TH SEM"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25sp"
        android:textStyle="bold" />


</LinearLayout>
        <Button
            android:id="@+id/meappliedthermodynamicsbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Applied Thermodynamics"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/mekinematicsofmachinesbutton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Kinematics of Machines"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/memanufacturingprocess2button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Manufacturing Process-II"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/meengineeringmathematics4button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Engineering Mathematics-IV"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/meadvancedmathematics2button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Advanced Mathematics-II"
            android:textAlignment="center"
            android:textSize="22sp"/>


    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
